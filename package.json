{
    "name": "tsframework",
    "author": "Jack Chen",
    "version": "1.0.0",
    "description": "tsframework",
    "main": "index.js",
    "dependencies": {
        "chalk": "^4.1.2",
        "glob": "^7.2.0",
        "koa": "^2.13.4",
        "koa-compose": "^4.1.0",
        "koa-router": "^10.1.1",
        "moment": "^2.29.1",
        "reflect-metadata": "^0.1.13",
        "uuid": "^8.3.2"
    },
    "repository": {},
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/koa": "^2.13.4",
        "@types/koa-router": "^7.4.4",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "alsatian": "^3.2.1",
        "codecov": "^3.8.3",
        "eslint": "^8.1.0",
        "eslint-plugin-html": "^6.2.0",
        "nyc": "^15.1.0",
        "supertest": "^6.1.6",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "eslintIgnore": [
        ".eslintrc.js",
        "index.js"
    ],
    "scripts": {
        "postversion": "git push origin v%npm_package_version%",
        "dev": "cross-env NODE_ENV=development node index.js",
        "prod": "cross-env NODE_ENV=production node index.js",
        "test": "alsatian --tap src/__test__/*.ts",
        "coverage": "nyc --reporter=lcov --reporter=html npm run test && nyc report",
        "codecov": "codecov",
        "tsc": "npm run tsc:clean && npm run tsc:build",
        "tsc:build": "tsc -b tsconfig.json",
        "tsc:watch": "tsc -b tsconfig.json --watch",
        "tsc:clean": "tsc -b tsconfig.json --clean",
        "pub": "npm run tsc && npm publish --access public"
    },
    "license": "ISC"
}