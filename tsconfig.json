{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "charset": "utf8", // 文档格式
        "allowJs": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "pretty": true
    },
    "include": ["src/**/*", "tmp/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "index.js"]
}
